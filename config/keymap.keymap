#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

&lt { flavor = "hold-preferred"; };

/ {
    combos {
        compatible = "zmk,combos";

        Escape {
            bindings = <&kp ESCAPE>;
            key-positions = <16 15>;
        };

        to_keyboard_config {
            bindings = <&to 3>;
            key-positions = <45 46 44>;
        };

        to_bootloader {
            bindings = <&tog 4>;
            key-positions = <36 46 41 42>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        layer_0_qwerty {
            bindings = <
&trans          &kp Q   &kp W      &kp E         &kp R             &kp T  &kp Y          &kp U      &kp I      &kp O       &kp P      &kp SLASH
&lt 2 TAB       &kp A   &kp S      &kp D         &kp F             &kp G  &kp H          &kp J      &kp K      &kp L       &kp COLON  &kp ENTER
&kp LEFT_SHIFT  &kp Z   &kp X      &kp C         &kp V             &kp B  &kp N          &kp M      &kp COMMA  &kp PERIOD  &kp MINUS  &kp RSHIFT
&trans          &trans  &kp LCTRL  &kp LEFT_ALT  &kp LEFT_COMMAND  &mo 1  &kp BACKSPACE  &kp SPACE             &trans      &trans     &trans
            >;
        };

        layer_1 {
            bindings = <
&trans  &kp N1  &kp N2         &kp N3                &kp N4                 &kp N5          &kp N6            &kp N7             &kp N8  &kp N9             &kp N0           &trans
&trans  &trans  &kp GRAVE      &kp MINUS             &kp EQUAL              &kp BSLH        &kp LEFT          &kp DOWN           &kp UP  &kp RIGHT          &trans           &trans
&trans  &trans  &kp SEMICOLON  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp APOSTROPHE  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &trans  &trans             &trans           &trans
&trans  &trans  &trans         &trans                &trans                 &trans          &trans            &trans                     &kp C_VOLUME_DOWN  &kp C_VOLUME_UP  &kp K_MUTE
            >;
        };

        layer_2_input {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &kp LS(LG(N5))  &trans     &trans     &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &kp LC(SEMI)    &kp LANG2  &kp LANG1  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans          &trans     &trans     &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans                     &trans     &trans  &trans
            >;
        };

        layer_3_bluetooth {
            bindings = <
&trans  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &trans  &trans      &trans      &trans  &trans  &bt BT_CLR
&trans  &trans        &trans        &trans        &trans        &trans        &trans  &bt BT_NXT  &bt BT_PRV  &trans  &trans  &trans
&trans  &trans        &trans        &trans        &trans        &trans        &trans  &trans      &trans      &trans  &trans  &trans
&trans  &trans        &trans        &trans        &trans        &trans        &trans  &trans                  &trans  &trans  &trans
            >;
        };

        layer_4_bootloader {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans          &trans  &trans  &trans
            >;
        };
    };
};
